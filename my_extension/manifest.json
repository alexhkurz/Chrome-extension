{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "description": "My first Chrome extension.",
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["popup.js"]
}
