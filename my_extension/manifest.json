{
  "manifest_version": 2,
  "name": "BibTeX Collector",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "nativeMessaging",
    "https://api.example.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Collect BibTeX"
  },
  "host_permissions": [
    "https://*.example.com/*"
  ]
}
